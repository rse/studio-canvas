{
    "private":         true,
    "name":            "studio-canvas",
    "version":         "0.0.0",
    "homepage":        "https://github.com/rse/studio-canvas",
    "description":     "Real-Time Virtual Studio Canvas Rendering",
    "author": {
        "name":        "Dr. Ralf S. Engelschall",
        "email":       "rse@engelschall.com",
        "url":         "http://engelschall.com"
    },
    "license":         "GPL-3.0-only",
    "repository": {
        "type":        "git",
        "url":         "https://github.com/rse/studio-canvas"
    },
    "browser":         "src/client/index.html",
    "main":            "src/client/index.html",
    "dependencies": {
        "vue":                              "3.2.47",
        "vue-tippy":                        "6.0.0",
        "@vueform/multiselect":             "2.5.8",
        "@vueform/slider":                  "2.1.7",
        "@vueform/toggle":                  "2.1.3",
        "@babylonjs/core":                  "5.47.0",
        "@babylonjs/loaders":               "5.47.0",
        "typopro-web":                      "4.2.6",
        "@fortawesome/fontawesome-free":    "6.3.0",
        "axios":                            "1.3.3",
        "perfect-scrollbar":                "1.5.5",
        "vue3-tabs-component":              "1.2.0",
        "reconnecting-websocket":           "4.4.0",

        "@hapi/hapi":                       "21.3.0",
        "@hapi/boom":                       "10.0.1",
        "@hapi/inert":                      "7.0.1",
        "hapi-plugin-header":               "1.1.8",
        "hapi-plugin-traffic":              "1.1.8",
        "hapi-plugin-websocket":            "2.4.7",
        "hapi-plugin-ducky":                "1.1.9",

        "@types/hapi__inert":               "5.2.6",
        "@types/js-yaml":                   "4.0.5",
        "@types/urijs":                     "1.19.19",
        "@types/ws":                        "8.5.4",
        "@types/yargs":                     "17.0.22",
        "@types/object-hash":               "3.0.2",
        "@types/throttle-debounce":         "5.0.0",
        "@types/object-path":               "0.11.1",
        "@types/minimatch":                 "5.1.2",

        "chalk":                            "4.1.2",
        "minimatch":                        "6.2.0",
        "glob-promise":                     "6.0.2",
        "js-yaml":                          "4.1.0",
        "moment":                           "2.29.4",
        "postcss-html":                     "1.5.0",
        "pure-uuid":                        "1.6.2",
        "urijs":                            "1.19.11",
        "ws":                               "8.12.1",
        "yargs":                            "17.7.0",
        "object-hash":                      "3.0.0",
        "ducky":                            "2.8.2",
        "throttle-debounce":                "5.0.0",
        "object-path":                      "0.11.8"
    },
    "devDependencies": {
        "@rollup/plugin-yaml":              "4.0.1",
        "@typescript-eslint/eslint-plugin": "5.52.0",
        "@typescript-eslint/parser":        "5.52.0",
        "@vitejs/plugin-vue":               "4.0.0",

        "@vue/eslint-config-typescript":    "11.0.2",
        "eslint":                           "8.34.0",
        "eslint-config-standard":           "17.0.0",
        "eslint-plugin-import":             "2.27.5",
        "eslint-plugin-vue":                "9.9.0",

        "htmllint":                         "0.7.2",
        "htmllint-cli":                     "0.0.7",

        "nodemon":                          "2.0.20",
        "npm-run-all":                      "4.1.5",
        "rimraf":                           "4.1.2",
        "stmux":                            "1.8.5",
        "stylelint":                        "15.1.0",
        "stylelint-config-html":            "1.1.0",
        "stylelint-config-recommended-vue": "1.4.0",
        "stylelint-config-standard":        "30.0.1",
        "stylelint-config-standard-vue":    "1.0.0",
        "stylelint-stylus":                 "0.18.0",
        "postcss-html":                     "1.5.0",
        "stylus":                           "0.59.0",
        "typescript":                       "4.9.5",
        "vite":                             "4.1.1",
        "vue-tsc":                          "1.1.2",
        "zx":                               "7.1.1"
    },
    "upd": [
        "!htmllint",
        "!chalk"
    ],
    "scripts": {
        "dev":              "stmux -w always -m beep -e 'built.in.+ms' -- [ \"npm run lint:watch\" : \"npm run build:client:dev -- -w\" : \"npm run build:server:dev -- -w\" : \"npm run start:dev\" ]",
        "lint:watch":       "nodemon --exec \"npm run lint\" --watch src --ext html,styl,js,ts,vue",
        "lint":             "npm-run-all --print-label --silent --sequential lint:tsc lint:vue-tsc lint:eslint lint:htmllint",
        "lint:tsc":         "tsc --project etc/tsc-server.json --noEmit",
        "lint:vue-tsc":     "vue-tsc --project etc/tsc-client.json --noEmit",
        "lint:eslint":      "eslint --config etc/eslint.yaml --ext ts,vue src/**/*.vue src/**/*.ts",
        "lint:stylelint":   "stylelint --config etc/stylelint.yaml src/**/*.styl src/**/*.vue",
        "lint:htmllint":    "htmllint --rc etc/htmllint.json src/**/*.html",
        "build":            "npm-run-all --print-label --silent --sequential build:client build:server",
        "build:dev":        "npm-run-all --print-label --silent --sequential build:client:dev build:server:dev",
        "build:client":     "vite --config etc/vite-client.ts build --logLevel info --mode production",
        "build:client:dev": "vite --config etc/vite-client.ts build --logLevel info --mode development",
        "build:server":     "tsc --project etc/tsc-server.json",
        "build:server:dev": "tsc --project etc/tsc-server.json --sourceMap",
        "start:dev":        "nodemon --exec \"npm start\" --watch dst/server --ext js --delay 0.5",
        "start":            "node dst/server/index.js -a 0.0.0.0 -p 12345 -A 0.0.0.0 -P 5555 -C 10.0.0.10:CAM1 -C 10.0.0.11:CAM2 -C 10.0.0.12:CAM3 -C 10.0.0.13:CAM4",
        "clean":            "rimraf dist",
        "clean:dist":       "rimraf dist node_modules"
    }
}
